                <Label Text="Contact Information" FontSize="Small" FontAttributes="Bold"></Label>

                <StackLayout Margin="10,0,10,0">
                    <components:OutlinedMaterialEntry
                        PlaceholderText="Email"
                        x:Name="email"
                        Keyboard="Email"
                        ReturnType="Next"
                        LeadingIcon="email.png"
                    />
                </StackLayout>

                <StackLayout Margin="10,0,10,0">
                    <components:OutlinedMaterialEntry
                        PlaceholderText="Address"
                        x:Name="address"
                        Keyboard="Text"
                        ReturnType="Next"
                        LeadingIcon="home.png"
                    />
                </StackLayout>

                <StackLayout Margin="10,0,10,5">
                    <components:OutlinedMaterialEntry
                        PlaceholderText="Phone Number"
                        x:Name="phoneNumber"
                        Keyboard="Telephone"
                        ReturnType="Next"
                        LeadingIcon="phone_call.png"
                    />
                </StackLayout>

                <StackLayout Margin="10,0,10,5">
                    <components:OutlinedMaterialEntry
                        PlaceholderText="Password"
                        x:Name="password"
                        Keyboard="Default"
                        ReturnType="Next"
                        IsPassword="True" 
                        MaxLength="8"
                        LeadingIcon="password.png"
                    />
                </StackLayout>

                <StackLayout Margin="10,0,10,5">
                    <components:OutlinedMaterialEntry
                        PlaceholderText="Confirm Password"
                        x:Name="confirmPassword"
                        Keyboard="Default"
                        ReturnType="Next"
                        IsPassword="True" 
                        MaxLength="8"
                        LeadingIcon="password.png"
                    />
                </StackLayout>


                <Button Text="Save" BackgroundColor="HotPink" TextColor="White" CornerRadius="30" Clicked="Button_clicked" />



